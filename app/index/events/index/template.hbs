

<div class="main-container">
  <div class="table-container">
    <div class="page-title-container">
      <h1 id="events" class="page-title">Events</h1>
    </div>
    <table class="table">
      <thead class="table-head">
        <tr class="table-row">
          <th class="table-header">Event</th>
          <th class="table-header">Type</th>
          <th class="table-header">Est. Time</th>
          <th class="table-header">Prize</th>
          <th class="table-header">Search Area</th>
          <th class="table-header">Available</th>
          <th class="table-header"></th>
        </tr>
      </thead>

      <tbody class="table-body">

        {{#each model as |event|}}
          <tr class="table-row liquid-container">
            <td class="table-item">{{event.name}}</td>
            <td class="table-item">{{event.type}}</td>
            <td class="table-item">{{event.etc}}</td>
            <td class="table-item"><img class="small-pic" data-lf="prize-image:{{event.id}}" src="{{event.prize.imgUrl}}" alt=""></td>
            <td class="table-item">{{event.searchArea}}</td>
            <td class="table-item">
              {{#if event.available}}
                {{fa-icon "check-circle"}}
              {{else}}
                {{fa-icon "times-circle"}}
              {{/if}}
            </td>
            <td class="table-item__button" data-qa="detailsButton">
              {{#link-to "index.events.details" event.id class="btn details-link" }}Details{{/link-to}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
